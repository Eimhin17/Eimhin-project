{
  "name": "DebsMatch Design System",
  "version": "1.0.0",
  "description": "Design system for DebsMatch app with mascot-inspired UI",
  
  "colors": {
    "primary": {
      "white": "#FFFFFF",
      "pink": "#FF4F81",
      "purple": "#c3b1e1"
    },
    "usage": {
      "background": {
        "primary": "#FFFFFF",
        "secondary": "#FAFAFA",
        "tertiary": "#F8F8F8",
        "pinkLight": "#FFF0F5",
        "purpleLight": "#F8F4FF",
        "pinkVeryLight": "#FFE5F0",
        "grayLight": "#F3F4F6"
      },
      "text": {
        "primary": "#1B1B3A",
        "secondary": "#6B7280",
        "tertiary": "#9CA3AF",
        "inverse": "#FFFFFF"
      },
      "accent": {
        "pink": "#FF4F81",
        "purple": "#c3b1e1"
      },
      "borders": {
        "light": "#E5E7EB",
        "medium": "#D1D5DB",
        "accent": "#FF4F81",
        "pinkLight": "#FFB6C1",
        "purpleLight": "#D8BFD8"
      }
    },
    "distribution": {
      "white": "80%",
      "pink": "15%",
      "purple": "5%"
    }
  },
  
  "typography": {
    "fonts": {
      "primary": "Poppins",
      "secondary": "Inter"
    },
    "hierarchy": {
      "headers": {
        "fontFamily": "Poppins",
        "fontWeight": "700",
        "fontSize": "24px",
        "lineHeight": "32px",
        "color": "#1B1B3A"
      },
      "subheaders": {
        "fontFamily": "Poppins",
        "fontWeight": "600",
        "fontSize": "20px",
        "lineHeight": "28px",
        "color": "#1B1B3A"
      },
      "body": {
        "fontFamily": "Inter",
        "fontWeight": "400",
        "fontSize": "16px",
        "lineHeight": "24px",
        "color": "#1B1B3A"
      },
      "ui_elements": {
        "fontFamily": "Poppins",
        "fontWeight": "500",
        "fontSize": "16px",
        "lineHeight": "24px",
        "color": "#1B1B3A"
      },
      "chat_messages": {
        "fontFamily": "Inter",
        "fontWeight": "400",
        "fontSize": "16px",
        "lineHeight": "24px",
        "color": "#1B1B3A"
      },
      "small_text": {
        "fontFamily": "Inter",
        "fontWeight": "400",
        "fontSize": "14px",
        "lineHeight": "20px",
        "color": "#6B7280"
      },
      "captions": {
        "fontFamily": "Inter",
        "fontWeight": "400",
        "fontSize": "12px",
        "lineHeight": "16px",
        "color": "#9CA3AF"
      }
    }
  },
  
  "spacing": {
    "xs": "4px",
    "sm": "8px",
    "md": "16px",
    "lg": "24px",
    "xl": "32px",
    "2xl": "48px",
    "3xl": "64px"
  },
  
  "borderRadius": {
    "sm": "8px",
    "md": "12px",
    "lg": "16px",
    "xl": "20px",
    "2xl": "24px",
    "full": "9999px"
  },
  
  "shadows": {
    "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.05)",
    "md": "0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06)",
    "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05)",
    "xl": "0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04)"
  },
  
  "components": {
    "headers": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderBottomWidth": "1px",
        "borderBottomColor": "#E5E7EB",
        "paddingHorizontal": "24px",
        "paddingVertical": "16px",
        "flexDirection": "row",
        "alignItems": "center",
        "position": "relative"
      },
      "backButton": {
        "width": "72px",
        "height": "72px",
        "marginLeft": "-16px",
        "zIndex": 1,
        "alignItems": "center",
        "justifyContent": "center"
      },
      "centerContent": {
        "position": "absolute",
        "left": 0,
        "right": 0,
        "alignItems": "center",
        "justifyContent": "center",
        "zIndex": 0
      },
      "rightSpacer": {
        "width": "72px",
        "zIndex": 1
      }
    },
    "searchInputs": {
      "default": {
        "borderRadius": "12px",
        "overflow": "hidden",
        "marginBottom": "8px"
      },
      "focused": {
        "shadowColor": "#FF4F81",
        "shadowOffset": { "width": 0, "height": 4 },
        "shadowOpacity": 0.3,
        "shadowRadius": 8,
        "elevation": 8
      },
      "gradient": {
        "default": ["#F8F4FF", "#FFFFFF"],
        "focused": ["#FFE5F0", "#FFF0F5"]
      }
    },
    "listItems": {
      "alternating": {
        "even": {
          "backgroundColor": "#FFF0F5",
          "borderColor": "#FFB6C1"
        },
        "odd": {
          "backgroundColor": "#F8F4FF",
          "borderColor": "#D8BFD8"
        }
      },
      "selected": {
        "borderColor": "#FF4F81",
        "borderWidth": "2px"
      },
      "default": {
        "borderWidth": "2px",
        "borderColor": "#E5E7EB",
        "borderRadius": "12px",
        "padding": "16px",
        "marginBottom": "16px"
      }
    },
    "progressBars": {
      "gradient": {
        "colors": ["#FF4F81", "#c3b1e1", "#FF4F81"],
        "start": { "x": 0, "y": 0 },
        "end": { "x": 1, "y": 0 }
      },
      "shine": {
        "position": "absolute",
        "top": 0,
        "left": 0,
        "right": 0,
        "height": "50%",
        "backgroundColor": "rgba(255, 255, 255, 0.3)",
        "borderRadius": "12px"
      },
      "track": {
        "backgroundColor": "#F3F4F6",
        "borderRadius": "12px",
        "overflow": "hidden",
        "shadowColor": "#FF4F81",
        "shadowOffset": { "width": 0, "height": 2 },
        "shadowOpacity": 0.1,
        "shadowRadius": 4,
        "elevation": 2
      }
    },
    "backButton": {
      "default": {
        "width": "72px",
        "height": "72px",
        "alignItems": "center",
        "justifyContent": "center",
        "activeOpacity": 0.7
      },
      "icon": {
        "size": "28px",
        "color": "#c3b1e1"
      },
      "variants": {
        "small": {
          "width": "60px",
          "height": "60px",
          "iconSize": "24px"
        },
        "large": {
          "width": "80px",
          "height": "80px",
          "iconSize": "32px"
        }
      }
    },
    "buttons": {
      "primary": {
        "backgroundColor": "#FF4F81",
        "textColor": "#FFFFFF",
        "borderRadius": "16px",
        "padding": "18px 32px",
        "minHeight": "56px",
        "fontFamily": "Poppins-SemiBold",
        "fontWeight": "600",
        "fontSize": "18px",
        "letterSpacing": "0.5px",
        "shadow": {
          "ios": {
            "shadowColor": "#FF4F81",
            "shadowOffset": { "width": 0, "height": 6 },
            "shadowOpacity": 0.3,
            "shadowRadius": 12
          },
          "android": {
            "elevation": 8,
            "shadowColor": "#FF4F81"
          }
        }
      },
      "secondary": {
        "backgroundColor": "#FFFFFF",
        "textColor": "#c3b1e1",
        "borderRadius": "16px",
        "padding": "18px 32px",
        "minHeight": "56px",
        "borderWidth": "2px",
        "borderColor": "#c3b1e1",
        "fontFamily": "Poppins-SemiBold",
        "fontWeight": "600",
        "fontSize": "18px",
        "letterSpacing": "0.5px",
        "shadow": {
          "ios": {
            "shadowColor": "#c3b1e1",
            "shadowOffset": { "width": 0, "height": 4 },
            "shadowOpacity": 0.2,
            "shadowRadius": 8
          },
          "android": {
            "elevation": 4,
            "shadowColor": "#c3b1e1"
          }
        }
      },
      "outline": {
        "backgroundColor": "transparent",
        "textColor": "#FF4F81",
        "borderColor": "#FF4F81",
        "borderWidth": "2px",
        "borderRadius": "16px",
        "padding": "18px 32px",
        "minHeight": "56px",
        "fontFamily": "Poppins-SemiBold",
        "fontWeight": "600",
        "fontSize": "18px",
        "letterSpacing": "0.5px"
      },
      "option": {
        "backgroundColor": "#FFFFFF",
        "textColor": "#1B1B3A",
        "borderRadius": "16px",
        "padding": "18px 24px",
        "minHeight": "60px",
        "borderWidth": "2px",
        "borderColor": "#FFE5F0",
        "fontFamily": "Poppins-Medium",
        "fontWeight": "500",
        "fontSize": "18px",
        "flexDirection": "row",
        "alignItems": "center",
        "shadow": {
          "ios": {
            "shadowColor": "#FF4F81",
            "shadowOffset": { "width": 0, "height": 2 },
            "shadowOpacity": 0.05,
            "shadowRadius": 4
          },
          "android": {
            "elevation": 2,
            "shadowColor": "#FF4F81"
          }
        },
        "active": {
          "backgroundColor": "#FF4F81",
          "borderColor": "#FF4F81",
          "textColor": "#FFFFFF",
          "fontWeight": "600"
        }
      }
    },
    "cards": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "16px",
        "padding": "20px",
        "shadow": "md",
        "border": "1px solid #E5E7EB"
      },
      "profile": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": "20px",
        "padding": "0px",
        "shadow": "lg",
        "border": "1px solid #E5E7EB"
      }
    },
    "inputs": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderColor": "#D1D5DB",
        "borderRadius": "12px",
        "padding": "12px 16px",
        "fontFamily": "Inter",
        "fontSize": "16px",
        "color": "#1B1B3A"
      },
      "focused": {
        "borderColor": "#FF4F81",
        "borderWidth": "2px"
      }
    },
    "selectionButtons": {
      "container": {
        "width": "100%",
        "gap": "16px",
        "flex": 1,
        "justifyContent": "center",
        "paddingVertical": "48px"
      },
      "button": {
        "borderRadius": "16px",
        "minHeight": "56px",
        "borderWidth": "2px",
        "borderColor": "#FFE5F0",
        "shadowColor": "#FF4F81",
        "shadowOffset": { "width": 0, "height": 2 },
        "shadowOpacity": 0.05,
        "shadowRadius": 4,
        "elevation": 2,
        "overflow": "hidden"
      },
      "buttonGradient": {
        "flex": 1,
        "flexDirection": "row",
        "alignItems": "center",
        "justifyContent": "flex-start",
        "paddingVertical": "18px",
        "paddingHorizontal": "32px",
        "borderRadius": "14px"
      },
      "gradientColors": {
        "active": ["#FF4F81", "#FF4F81"],
        "inactive": ["#FFFFFF", "#FFF0F5"]
      },
      "icon": {
        "size": 24,
        "marginRight": "16px",
        "colors": {
          "active": "#FFFFFF",
          "inactive": "#c3b1e1"
        }
      },
      "label": {
        "fontSize": "20px",
        "fontWeight": "600",
        "fontFamily": "Poppins-SemiBold",
        "colors": {
          "active": "#FFFFFF",
          "inactive": "#1B1B3A"
        }
      }
    }
  },
  
  "icons": {
    "pack": "Phosphor Icons",
    "style": "rounded, playful, approachable",
    "weights": ["thin", "light", "regular", "bold"],
    "sizes": {
      "small": "16px",
      "medium": "20px",
      "large": "24px",
      "xlarge": "32px"
    },
    "common_icons": {
      "navigation": {
        "home": "house",
        "likes": "heart",
        "chats": "chat-circle",
        "profile": "user"
      },
      "actions": {
        "like": "heart",
        "pass": "x",
        "filter": "funnel",
        "settings": "gear",
        "report": "flag",
        "camera": "camera",
        "search": "magnifying-glass"
      },
      "ui": {
        "back": "arrow-left",
        "close": "x",
        "menu": "list",
        "check": "check",
        "plus": "plus",
        "edit": "pencil"
      }
    }
  },
  
  "layout": {
    "grid": {
      "container": {
        "display": "flex",
        "flexDirection": "column",
        "paddingHorizontal": "24px",
        "paddingTop": "24px"
      },
      "sections": {
        "search": {
          "marginBottom": "24px"
        },
        "content": {
          "flex": 1
        }
      }
    },
    "headers": {
      "centered": {
        "position": "relative",
        "flexDirection": "row",
        "alignItems": "center",
        "paddingHorizontal": "24px",
        "paddingVertical": "16px"
      }
    }
  },
  "mascot_integration": {
    "personality": "friendly, approachable, whimsical",
    "design_principles": [
      "Rounded, organic shapes",
      "Soft, gentle animations",
      "Warm, inviting colors",
      "Playful but not childish",
      "Consistent with mascot aesthetic"
    ],
    "usage_points": [
      "Loading screens",
      "Empty states",
      "Success animations",
      "Onboarding guidance",
      "Error states"
    ]
  }
}
